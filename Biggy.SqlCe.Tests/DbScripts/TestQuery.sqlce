
select Artist.Name AS ArtistName, Track.Name, Track.UnitPrice
  from Artist inner join
       Album on Artist.ArtistId = Album.ArtistId inner join
       Track on Album.AlbumId = Track.AlbumId
 where (Artist.Name = 'ac/dc')
 
